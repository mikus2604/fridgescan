{
  "expo": {
    "name": "FridgeScan",
    "slug": "fridgescan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "fridgescan",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.justarieldotcom.fridgescan",
      "infoPlist": {
        "NSCameraUsageDescription": "FridgeScan needs access to your camera to scan barcodes and expiry dates.",
        "NSPhotoLibraryUsageDescription": "FridgeScan needs access to your photos to save scanned images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.justarieldotcom.fridgescan"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FridgeScan to access your camera to scan barcodes and expiry dates."
        }
      ],
      "expo-dev-client",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "c18e261b-e538-453e-a240-77c5bd262531"
      }
    },
    "owner": "justarieldotcom"
  }
}
